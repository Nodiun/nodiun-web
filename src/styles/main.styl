@import '../../bower_components/normalize-css/normalize.css'

//colors

$black = #383838
$secundary = #547980
$base = #2A8A85
$claro = #9DE0AD
$light = #E5FCC2
$gris = #E8E8E8

//variables
$margen = 20%

body
	margin 0
	padding 0
	font-family: Lato
	font-weight: 400

h1, h2, h3, h4, h5
	margin 0
	padding 0
a
	text-decoration: none
	color $black
ul
	list-style-type: none
	margin 0
	padding 0
h1
	color $light
	font-size 1.8em
	font-weight: 400
h2, h3
	color white
	font-weight 400
	padding-bottom: .7em
h2
	font-size 1.8em
h3
	font-size .9em
button
	color $black
	background-color $light
	margin 0
	padding .5em
	border none
	border-radius: 2px

@import './components/header'
@import './components/decoration'
@import './components/works'
@import './components/article'

a.anchor
	display: block;
	position: relative;
	top: -4em;
	visibility: hidden;
.presentation
	height 100vh
	box-sizing: border-box
	padding 0 8.333%
	padding-top 4em
	background-color white
	background-image: url(../img/bg1.jpg)
	background-size cover
	width 100%
	&-content
		height 100%
		display flex
		flex-direction column
		align-items center
		justify-content center
		text-align center
	&-button
		color $black
		display inline-block
		background-color #D6EBB5
		margin 0
		padding .5em
		border none
		border-radius: 2px
		transition all 200ms ease
		&:hover
			box-shadow: 0px 4px 6px rgba(black, .5)
			background-color $light
	&-logo
		width 6em
		height 6em
		padding-bottom 1em
		display block

.jobs
	z-index 9
	position relative
	&-item
		padding 1em
		border 1px solid $gris
		border-radius 3px
		z-index 9
		background-color $base
		transition all 300ms linear
		animation-name jobs
		animation-duration 3s
		&-title
			text-align: center
			color white
		&:hover
			background-color: $secundary
			
@keyframes jobs
	0%
		background-color white
	50%
		background-color white
	100%
		background-color $secundary
			
.sponsor
	color $base
	border-left .5em solid $base
	border-right .5em solid transparent
	box-sizing: border-box
	padding 1.5em 8.666%
	z-index 2
	&-title
		text-align center
		color $base
		margin-bottom .4em
	li
		font-size .9em
		margin-bottom 1.9em
	&-content--first
		font-size 2em
		li
			text-align: center
			color white
			background-color $base
			border-radius: 3px
			margin-bottom .5em
			margin-top .5em
			padding .5em
			transition all 100ms ease-in
			&:hover
				transform scale(1.05,1.05)
	
.decoration
	height 11em
	background-color: $base
	background-size: cover
	&:nth-child(10)
		background-position: top
		background-image: url("../img/bg2.jpg");
	&:nth-child(15)
		background-position: bottom
		background-image: url("../img/bg2.jpg");
		
.ourwork
	color $base
	border-left .5em solid $base
	border-right .5em solid transparent
	box-sizing: border-box
	padding 1.5em 8.666%
	&-title
		text-align center
		color $base
	&-projects
		li
			margin: 1em 0	
			&::after
				display block
				content "Â·"
				text-align center
				width 100%
				font-size 1.5em
			&:last-child::after
				content none
		&-title
			padding 0
			color $black
		&-parrafo
			margin .3em 0

.contact
	border-left .5em solid $light
	border-right .5em solid transparent
	box-sizing: border-box
	padding 4em 8.666%
	.fa
		font-size 2em
		padding .3em
		transition color 500ms ease
	.fa-facebook-official:hover
		color #3b5998
	.fa-twitter:hover
		color #55acee
	.fa-whatsapp:hover
		color #43d854
	.fa-envelope:hover
		color #F55D5D
	&-title
		color $base
		text-align center
	&-item
		font-size 1.4em
		
@media only screen  and (min-width : 550px)
	
	a.anchor
		top: -5em;
	.header
		&-container
			height: 5em
	.sponsor
		li
			font-size: .9em
			
@media only screen  and (min-width : 768px)
	.presentation
		font-size 1.2em
	.contact
		&-list
			display flex
			flex-wrap wrap
		&-item
			width 50%
	.jobs
		display flex
		&-item
			width 33.333%
	
	.ourwork
		font-size 1.1em
		&-projects
			display flex
			flex-direction row
			flex-wrap wrap
			li
				width 50%
				padding 0 .5em
				box-sizing: border-box
				&::after
					content none
	.sponsor
		&-content
			display flex
		&-list
			width 50%
			box-sizing border-box
			padding 0 1.3em
		&-list:nth-child(1)
			text-align: right
	.header
		&-menu
			font-size 1.5em
		&-title
			font-size 2em
			

@media only screen  and (min-width : 1050px)
	a.anchor
		top: -4.5em;
	.presentation
		&-content
			font-size 1.7em
			padding-left $margen
			padding-right $margen
		&-button
			font-size .8em
	.header
		&-container
			height: 4.5em
		&-nav
			border-radius 0px 0px 0em .3em
			position absolute
			width 20em
			top 4.5em
			right 0em
			height 0px
			transition all .1s ease-in
			background-color rgba($black, .6)
			&--show
				height 16em
				background-color rgba($black, .95)
	.sponsor
		padding-left $margen
		padding-right $margen
		border none
		border-top .5em solid $base
	.ourwork
		border none
		border-top .5em solid $black
		padding-left $margen
		padding-right $margen
	.jobs
		padding .5em $margen
		&-item
			margin .5em
	.contact
		border none
		border-top .5em solid $base
		padding-left $margen
		padding-right $margen
		.fa
			display block
			text-align center
		&-title
			display block
			text-align center
		&-item
			width 25%
			text-align center
	.decoration
		border-top .5em solid $black