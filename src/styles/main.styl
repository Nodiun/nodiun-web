@import '../../bower_components/normalize-css/normalize.css'

//colors

$black = #594F4F
$secundary = #547980
$base = #45ADA8
$claro = #9DE0AD
$light = #E5FCC2
$gris = #E8E8E8

//variables
$margen = 20%

body
	margin 0
	padding 0
	font-family: Lato
	font-weight: 400

h1, h2, h3, h4, h5
	margin 0
	padding 0
a
	text-decoration: none
ul
	list-style-type: none
	margin 0
	padding 0
h1
	color white
	font-size 1.8em
	font-weight: 400
h2, h3
	color white
	font-weight 400
	padding-bottom: .7em
h2
	font-size 1.8em
h3
	font-size .9em
button
		color $black
		background-color $light
		margin 0
		padding .5em
		border none
		border-radius: 2px

@import './components/header'
@import './components/decoration'
@import './components/works'
@import './components/article'

.presentation
	box-sizing: border-box
	padding 0 8.333%
	padding-top 4em
	background-color $base
	background-size cover
	width 100%
	&-logo
		margin .5em
		width 5em
	&-content
		text-align center
		padding 0 25%
		padding 2em .5em
	&-button
		box-shadow: 1px 2px 5px rgba(black, .7)
		font-size 1.3em

.jobs
	z-index 9
	position relative
	&-item
		padding 1em
		border 1px solid $gris
		z-index 9
		transition background-color 500ms ease-in-out
		color: $black
		&-title
			text-align: center
		&:hover
			background-color $black
.sponsor
	color $base
	border-left .5em solid $base
	border-right .5em solid transparent
	box-sizing: border-box
	padding 2em 8.666%
	z-index 2
	&-title
		text-align center
		color $base
		margin-bottom .4em
	li
		font-size .9em
		margin-bottom 1.1em
		
	
.decoration
	height 11em
	background-color: $base
	background-size: cover
	&:nth-child(5)
		background-position: top
		background-image: url("../img/bg2.jpg");
	&:nth-child(8)
		background-position: bottom
		background-image: url("../img/bg2.jpg");
		
.ourwork
	color $base
	border-left .5em solid $base
	border-right .5em solid transparent
	box-sizing: border-box
	padding 2em 8.666%
	&-title
		text-align center
		color $base
	&-projects
		li
			margin: 1em 0	
			&::after
				display block
				content "Â·"
				text-align center
				width 100%
				font-size 1.5em
			&:last-child::after
				content none
		&-cover
			width 100%
			height 7em
			background-color $light
			border-radius: .1em
			background-image: url(../img/page1.jpg)
			background-size: cover
			box-shadow: 1px 1px 2px rgba(gray, .75)
		&-title
			padding 0
		&-parrafo
			margin .3em 0

.contact
	border-left .5em solid $light
	border-right .5em solid transparent
	box-sizing: border-box
	padding 2em 8.666%
	.fa
		font-size 2em
		padding .3em
	a
		color $black
	&-title
		color $base
		text-align center
	&-item
		font-size 1.4em
		
@media only screen  and (min-width : 550px)

	html
		font-size 1.1em
	.header
		&-container
			height: 5em
	.sponsor
		li
			font-size: 1.1em
			
@media only screen  and (min-width : 768px)
	.presentation-logo
		display inline
	.contact
		&-list
			display flex
			flex-wrap wrap
		&-item
			width 50%
	.jobs
		display flex
		&-item
			width 33.333%
	
	.ourwork
		&-projects
			display flex
			flex-direction row
			flex-wrap wrap
			li
				width 50%
				padding 0 .5em
				box-sizing: border-box
				&::after
					content none
	.sponsor
		&-content
			display flex
		&-list
			width 50%
			box-sizing border-box
			padding 0 .5em
		&-list:nth-child(1)
			text-align: right
	.header
		&-menu
			font-size 1.5em
		&-title
			font-size 2em
			

@media only screen  and (min-width : 1024px)
	html
		font-size 1.3em
	.header
		&-container
			height: 3.3em
		&-nav
			border-radius 0 0 0 3px
			height auto
			position absolute
			width 20em
			top 3.3em
			right -20em
			background-color rgba($black, .6)
			transition all .3s ease-in-out
			&--show
				background-color rgba($black, .9)
				right 0
	.sponsor
		padding-left $margen
		padding-right $margen
		border none
		border-top .5em solid $base
	.ourwork
		border none
		border-top .5em solid $black
		padding-left $margen
		padding-right $margen
	.jobs
		padding .5em 16.666%
		&-item
			margin .5em
	.contact
		border none
		border-top .5em solid $base
		padding-left $margen
		padding-right $margen
		.fa
			display block
			text-align center
		&-title
			display block
			text-align center
		&-item
			width 25%
			text-align center
	.decoration
		border-top .5em solid $black