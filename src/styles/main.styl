@import '../../bower_components/normalize-css/normalize.css'

$black = #594F4F
$secundary = #547980
$base = #45ADA8
$claro = #9DE0AD
$light = #E5FCC2
$gris = #E8E8E8

body
	background-color: white
	margin 0
	padding 0
	font-family: Lato
	font-weight: 400

h1, h2, h3, h4, h5
	margin 0
	padding 0
a
	text-decoration: none
ul
	list-style-type: none
	margin 0
	padding 0
h1
	color white
	font-size 1.8em
	font-weight: 400
h2, h3
	color $claro
	font-weight 400
	padding-bottom: .7em
h2
	font-size 1.3em
h3
	font-size .9em
button
		color $base
		background-color $light
		margin 0
		padding .5em
		border none
		border-radius: 2px

.header
	background-color rgba($black, .85)
	position: fixed
	width: 100%
	z-index 10
	
	&-container
		height 4em
		display flex
		flex-direction row
		align-items center
	&-title
		order 1
		width 66.664%
		text-align: center
	&-menu
		order 0
		color $light
		width: 16.666%
		background-color: transparent
		font-size 1.3em
		text-shadow: 1px 1px 2px black
		box-sizing: border-box
		&:focus
			outline 0
	&-nav
		height: 0
		overflow: hidden
		&--show
			height: auto
		&-list
			width: 100%
			height: auto
		&-item
			height: 4em
			width: 100%
			text-align: center
			border-top 1px solid rgba($black, .75)
			vertical-align: center
			box-sizing: border-box
			line-height: 4em
			a
				color white
.presentation
	box-sizing: border-box
	padding 0 8.333%
	padding-top 4em
	background-image: url(../img/bg1.jpg)
	background-size cover
	width 100%
	&-content
		text-align center
		padding 3em .5em
	&-button
		box-shadow: 1px 1px 2px rgba(black, .5)

.jobs
	z-index 9
	position relative
	&-item
		background-color: $gris
		padding 1em
		box-shadow: 0px 1px 3px $black
		z-index 9
		&-title
			color: $black
			text-align: center
			
.sponsor
	color $base
	border-left .5em solid $light
	border-right .5em solid transparent
	box-sizing: border-box
	padding 2em 8.666%
	z-index 2
	&-title
		text-align center
		color $base
		margin-bottom .4em
	li
		font-size .9em
		margin-bottom 1.1em
		
	
.decoration
	height 11em
	background-color: $base
	background-size: cover
	background-position: center
	&:nth-child(5)
		background-image: url("../img/bg2.jpg");
	&:nth-child(8)
		background-image: url("../img/bg3.jpg");
		
.ourwork
	color $base
	border-left .5em solid $base
	border-right .5em solid transparent
	box-sizing: border-box
	padding 2em 8.666%
	background-color: $gris
	&-title
		text-align center
		color $base
	&-projects
		li
			margin: 1em 0	
			&::after
				display block
				content "Â·"
				text-align center
				width 100%
				font-size 1.5em
			&:last-child::after
				content ""
		&-cover
			width 100%
			height 7em
			background-color $light
			border-radius: .1em
		&-title
			padding 0
		&-parrafo
			margin .3em 0

.contact
	border-left .5em solid $light
	border-right .5em solid transparent
	box-sizing: border-box
	padding 2em 8.666%
	.fa
		font-size 2em
		padding .3em
	a
		color $black
	&-title
		color $base
		text-align center
	&-item
		font-size 1.4em