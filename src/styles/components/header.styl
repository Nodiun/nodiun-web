
.header
	background-color rgba($black, .6)
	position: fixed
	width: 100%
	z-index 10
	transition: background-color .3s ease-in-out
	
	&-container
		height 4em
		display flex
		flex-direction row
		align-items center
	&-title
		order 0
		width 66.664%
		text-align: center
		padding-left 16.666%
	&-menu
		order 1
		color $light
		width: 16.666%
		background-color: transparent
		font-size 1.3em
		text-shadow: 1px 1px 2px black
		box-sizing: border-box
		&:focus
			outline 0
	&-nav
		height: 0
		transition: height .3s ease-in-out
		overflow: hidden
		&--show
			height: 16em
		&-list
			width: 100%
			height: auto
		&-item
			height: 4em
			width: 100%
			text-align: center
			vertical-align: center
			box-sizing: border-box
			line-height: 4em
			a
				color white
	&--show
		background-color rgba($black, .95)
		